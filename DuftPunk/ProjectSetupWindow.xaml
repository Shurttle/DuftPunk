<Window x:Class="DuftPunk.ProjectSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DuftPunk"
        mc:Ignorable="d"
        Title="ProjectSetupWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Select Project Type:" FontWeight="Bold" FontSize="16" Margin="10"/>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="10">
            <RadioButton x:Name="radioSingleUser" Content="Project for Single User" Checked="RadioSingleUser_Checked" Margin="5"/>
            <RadioButton x:Name="radioMultipleUsers" Content="Project for Multiple Users" Checked="RadioMultipleUsers_Checked" Margin="5"/>
            <StackPanel x:Name="panelMethodologies" Margin="10">
            </StackPanel>
        </StackPanel>

        <Button Grid.Row="2" x:Name="btnContinue" Content="Continue" Width="120" Height="40" HorizontalAlignment="Right" Margin="10" Click="BtnContinue_Click" />
    </Grid>
</Window>
